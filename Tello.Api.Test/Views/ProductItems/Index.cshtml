@model PaginatedListDto<ProductItemListItemGetDto>
@{
    ViewData["Title"] = "Index";
    int count = Model.Items.Count * (Model.PageIndex - 1);
}

<div class="col-md-10 mx-auto stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                <a asp-action="create" asp-controller="productitems" class="btn btn-success">Create</a>
                <a asp-action="getalldeleted" asp-controller="productitems" class="btn btn-danger">See all deleted product items</a>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            count++;
                            <tr class="text-light">
                                <td>@count</td>
                                <td>@item.Id</td>
                                @*<td> <a asp-action="detail" asp-route-id="@item.Id" class="text-white">@item.Name</a> </td>*@
                                <td>@item.ProductName</td>
                            @*    <td>@item.SalePrice</td>
                                <td>@item.CostPrice</td>*@
                                <td>@item.CategoryName</td>
                                <td>@item.BrandName</td>
                                <td>@item.Count</td>
                                <td>
                                    <a asp-action="edit" asp-route-id="@item.Id" class="badge badge-danger">Edit</a>
                                    <a asp-action="delete" asp-route-id="@item.Id" class="badge badge-danger sweet-delete">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-center pt-3">
                <ul class="pagination mx-auto">
                    <li class="page-item">
                        <a class="page-link" asp-action="index" asp-controller="productitems" asp-route-page="1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="index" asp-controller="productitems"
                           asp-route-page="@(Model.PageIndex==1?Model.PageIndex:Model.PageIndex-1)" aria-label="Next">
                            <i class="fa-solid fa-angle-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item"><a class="page-link" asp-action="index" asp-controller="productitems" asp-route-page="@i">@i</a></li>

                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="index" asp-controller="productitems" asp-route-page="@(Model.PageIndex==Model.TotalPage?Model.TotalPage:Model.PageIndex+1)" aria-label="Next">
                            <i class="fa-solid fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="index" asp-controller="productitems" asp-route-page="@Model.TotalPage" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>